doctype html
html(lang='en')
  include common/head.pug
  +head(title)
  body
    header  
      include common/navbar.pug
      +navbar(user)
      .container 
        .row
            .col-md-6.order-md-1.text-center.text-md-left.pr.md-5
                h1.mt-5.mb-3 Introduce yourself
                p.lead 
                p.lead.mb-4
                form(id="form")
                    .input-group.mb-3
                        input(id="name" type="text", placeholder="Enter your name here").form-control
                    .input-group.mb-3
                        input(id="age" type="number", placeholder="Your age").form-control.w-12
                    .input-group.mb-3
                        button.btn.btn-primary   Submit

    include common/footer.pug
    +footer()
    script(src="javascripts/main.js")