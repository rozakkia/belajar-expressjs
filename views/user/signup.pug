doctype html
html(lang='en')
  include ../common/head.pug
  +head("Halaman Daftar")
  body
    header  
      include ../common/navbar.pug
      +navbar()
      .container 
        .row
            .col-sm-12.offset-md-2.col-md-8
                .jumbotron  
                    h2.text-center Signup
                    .row
                        .col-sm-12.col-md-12
                            form(action='/signup', method='POST')
                                .formgroup
                                    label.small.mb-1.mt-3 Email:
                                    input(type="email", placeholder="Please enter your email", required=true, name="email", value=formData.email).form-control
                                    if (errors && errors.email)
                                      p.small.text-danger #{errors.email}
                                    label.small.mb-1.mt-3 Password:
                                    input(type="password", placeholder="Your password", required=true, name="password", value="").form-control
                                    if (errors && errors.password)
                                      p.small.text-danger #{errors.password}
                                    button.mt-3.btn.btn-primary(type="submit") Daftar
                                    p.mt-2.mb-0
                                      | Sudah punya akun? #[a(href="/login") Masuk Sekarang]
    include ../common/footer.pug
    +footer()