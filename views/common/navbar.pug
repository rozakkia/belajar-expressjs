mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Image").navbar-brand.mr-0
        .mr-md-2
            img(src="https://via.placeholder.com/728x90.png", width="36", height="36")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/leads") Leads
                li.nav-item
                    a.nav-link(href="/typescript") Typescript
        .navbar-right
            ul.navbar-nav.mr-auto
                if user
                    span.navbar-text Hello #{user.email}!
                    li.nav-item
                        a.nav-link(href="/logout") Logout
                else
                    li.nav-item
                        a.nav-link(href="/signup") Sign up
                    li.nav-item
                        a.nav-link(href="/login") Login

